<div class="main-container-sock m-3">
  <h2>List your smelly socks in here!</h2>

  <%= simple_form_for @sock do |f| %>
    <div class="form-inputs">
      <%= f.input :description,
                  required: true,
                  input_html: { autocomplete: "Type" } %>
      <%= f.input :type_of_socks,
                  collection: ['Knee high socks', 'Calf socks', 'Ankle socks'],
                  required: true,
                  input_html: { autocomplete: "Type" } %>
      <%= f.input :price,
                  required: true,
                  input_html: { autocomplete: "Price" } %>
      <%= f.input :size,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "Size" } %>
      <%= f.input :color,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "Color" } %>
      <%= f.input :photo, as: :file,
                  required: true,
                  input_html: { autocomplete: "Photo" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Create Sock", class:'btn btn-primary' %>
    </div>
  <% end %>
</div>
