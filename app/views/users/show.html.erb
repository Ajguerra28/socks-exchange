<div class="container">
  <div class= "d-flex buttomShow">
    <div>
      <%= link_to :back do %>
      <p>ðŸ§¦ Back</p>
      <% end %>
    </div>
  </div>
  <div class="d-flex justify-content-center">
    <div>
      <div class="d-flex profile align-items-center">
        <%= cl_image_tag(@user.avatar.key, width: 200, height: 200, crop: :fill, class: 'profile-picture') %>
        <h1 class="pl-3"><%= @user.name %></h1>
      </div>
      <div class="profile-info">
        <p>Location: <%= @user.location %></p>
        <p>Gender: <%= @user.gender %></p>
        <p>Date of birth: <%= @user.date_of_birth %></p>
      </div>
    </div>
  </div>

  <div class="row mt-5">
    <div class= "offset-md-3 col-6">
      <% if current_user.latitude.present? && current_user.longitude.present?  %>
        <div id="map"
          style="width: 100%; height: 300px;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      <% end %>
    </div>
  </div>

  <div class="row d-flex justify-content-center" >
  <% @socks.each do |sock| %>
    <div class="card-product my-3 mx-5">
    <%= link_to sock_path(sock) do %>
      <%= cl_image_tag(sock.photo.key, width: 200, height: 200, crop: :fill) %>
    <% end %>
      <div class="card-product-infos">
        <h2><%= sock.price %> â‚¬</h2>
        <p><%= sock.description%></p>
      </div>
    </div>
  <% end %>
</div>


</div>
